<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/y20"
    android:paddingTop="@dimen/y20"
    android:paddingRight="@dimen/y20">

    <TextView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/color_474747"
        android:textIsSelectable="true"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y24"
        android:paddingBottom="@dimen/y20">

        <TextView
            android:id="@+id/frome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxWidth="@dimen/y200"
            android:maxLines="1"
            android:paddingLeft="@dimen/y10"
            android:textColor="@color/color_999999"
            android:textSize="12sp"
            tools:text="群聊群聊群聊群聊群聊群聊群聊" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/y34"
            android:textColor="@color/color_999999"
            android:textSize="12sp"
            tools:text="2017/01/01" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line" />
</LinearLayout>