<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_f2_10_rect"
    android:orientation="vertical"
    android:padding="@dimen/y30">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y90">

        <ImageView
            android:layout_width="@dimen/y90"
            android:layout_height="@dimen/y90"
            android:src="@mipmap/icon_more_file" />

        <TextView
            android:id="@+id/title"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:paddingLeft="@dimen/y26"
            android:text="收藏的文件" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/frome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="@dimen/y200"
            android:maxLines="1"
            android:paddingLeft="@dimen/y10"
            android:textColor="@color/color_999999"
            android:textSize="12sp"
            tools:text="群聊群聊群聊群聊群聊群聊群聊" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/y34"
            android:textColor="@color/color_999999"
            android:textSize="12sp"
            tools:text="2017/01/01" />
    </LinearLayout>
</LinearLayout>