<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_popup_save_pic"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100"
        android:text="@string/save_picture"
        android:textColor="@color/color_424242"
        android:gravity="center"
        android:layout_above="@+id/tv_popup_close"
        android:layout_margin="@dimen/y10"
        android:background="@drawable/background_e6_white_rect"/>

    <TextView
        android:id="@+id/tv_popup_close"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100"
        android:text="@string/close"
        android:textColor="@color/color_424242"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/y10"
        android:background="@drawable/background_e6_white_rect"/>
</RelativeLayout>