<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y110"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/y28"
            android:layout_marginRight="@dimen/y28"
            android:src="@mipmap/icon_download_tag" />

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/y28"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/color_474747"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/download"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/y28"
            android:gravity="center"
            android:background="@drawable/background_f0_circle"
            android:paddingTop="@dimen/y16"
            android:paddingBottom="@dimen/y16"
            android:text="@string/download"
            android:textColor="@color/color_4fca19"
            android:textSize="13sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/y80"
        android:background="@color/color_f5f5f5" />
</LinearLayout>