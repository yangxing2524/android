<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.tencent.qcloud.ui.CircleImageView
            android:id="@+id/headview"
            android:layout_width="@dimen/y152"
            android:layout_height="@dimen/y152"
            android:layout_marginLeft="@dimen/y20"
            android:src="@mipmap/head_default" />
        <TextView
            android:id="@+id/name"
            android:layout_marginTop="@dimen/y22"
            android:layout_marginBottom="@dimen/y58"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="@string/call_request_tip1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <ImageView
        android:id="@+id/refuse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/y100"
        android:src="@drawable/icon_video_over" />

    <ImageView
        android:id="@+id/receive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/y100"
        android:src="@mipmap/receive_call" />
</RelativeLayout>