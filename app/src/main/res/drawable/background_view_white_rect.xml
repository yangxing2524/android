<?xml version="1.0" encoding="utf-8"?>
<inset xmlns:android="http://schemas.android.com/apk/res/android"
    android:insetLeft="1.0px"
    android:insetRight="1.0px" >

    <selector>
        <item android:state_pressed="true">
            <shape>
                <solid android:color="@color/main_gray" />
                <corners
                    android:bottomLeftRadius="2.0dip"
                    android:bottomRightRadius="2.0dip"
                    android:topLeftRadius="2.0dip"
                    android:topRightRadius="2.0dip" />
                
                <stroke 
                    android:width="0.5dp" 
                    android:color="@color/light_gray" />
            </shape>
        </item>
        <item>
            <shape>
                <solid android:color="@color/white" />
                <corners
                    android:bottomLeftRadius="2.0dip"
                    android:bottomRightRadius="2.0dip"
                    android:topLeftRadius="2.0dip"
                    android:topRightRadius="2.0dip" />
                
                <stroke 
                    android:width="0.5dp" 
                    android:color="@color/light_gray" />
            </shape>
        </item>
    </selector>

</inset>